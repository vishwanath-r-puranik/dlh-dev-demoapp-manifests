apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: testpermit-api
    app.kubernetes.io/component: testpermit-api
    app.kubernetes.io/instance: testpermit-api
    app.kubernetes.io/name: testpermit-api
    app.kubernetes.io/part-of: permit-microservices
  name: testpermit-api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: testpermit-api
  template:
    metadata:
      annotations:
        vault.hashicorp.com/agent-inject: "true"
        vault.hashicorp.com/agent-inject-secret-config: secret/data/issues/config
        vault.hashicorp.com/agent-inject-template-config: |
          {{- with secret "secret/data/issues/config" -}}
          databaseuser="{{ .Data.data.dbuser }}"
          databasepassword="{{ .Data.data.dbpwd }}"
          {{- end -}}
        vault.hashicorp.com/role: issues
      labels:
        app: testpermit-api
        deployment: testpermit-api
    spec:
      containers:
      - env:
        - name: DATABASE_HOST
          valueFrom:
            configMapKeyRef:
              key: databasehost
              name: testpermit-microservices-config
        - name: DATABASE_NAME
          valueFrom:
            configMapKeyRef:
              key: databasename
              name: testpermit-microservices-config
        - name: VAULT_PSQL_PROPERTIES
          value: /vault/secrets/config
        image: image-registry.openshift-image-registry.svc:5000/dlh-dev/testpermitmicroapi@DIGEST1
        name: api
        ports:
        - containerPort: 8080
          protocol: TCP
        volumeMounts:
        - mountPath: /usr/log
          name: fe-storage
      serviceAccountName: issues
      volumes:
      - name: fe-storage
        persistentVolumeClaim:
          claimName: fe-storage

---

kind: Deployment
apiVersion: apps/v1
metadata:
  name: frontend
  annotations:
  labels:
    app: frontend
    app.kubernetes.io/component: frontend
    app.kubernetes.io/instance: frontend
    app.kubernetes.io/name: frontend
    app.kubernetes.io/part-of: permit-microservices
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
        deployment: frontend
    spec:
      serviceAccountName: issues
      volumes:
        - name: fe-storage
          persistentVolumeClaim:
            claimName: fe-storage
      containers:
        - name: frontend
          ports:
            - containerPort: 8080
              protocol: TCP
          volumeMounts:
            - name: fe-storage
              mountPath: /usr/log
          env:
            - name: TESTPERMIT_MICROSERVICES_LOG_FOLDER_PATH
              value: /usr/log
            - name: TESTPERMIT_MICROSERVICES_API_URL
              valueFrom:
                configMapKeyRef:
                  name: testpermit-microservices-config
                  key: testpermitmicroservicesapiurl
          image: >-
            image-registry.openshift-image-registry.svc:5000/dlh-dev/testpermitmicrofrontend@DIGEST2
